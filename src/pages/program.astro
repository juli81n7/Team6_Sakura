---
import Topnav from "../components/Topnav.astro";
import Card from "../components/Card.astro";
import Shelf from "../components/Shelf.astro";
import Smallbtn from "../components/Smallbtn.astro";
import Footer from "../components/Footer.astro";
import "../styles/styles.css";

const url = "https://aruswkvjfqmwbmdbzrgy.supabase.co/rest/v1/testtabel";

const options = {
  headers: {
    apikey:
      "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6ImFydXN3a3ZqZnFtd2JtZGJ6cmd5Iiwicm9sZSI6ImFub24iLCJpYXQiOjE2Nzg3Nzc0NTgsImV4cCI6MTk5NDM1MzQ1OH0.8v-p9C_alBTmibzL_qtGCNqtAkcNRGL5TGvI2UFHXH0",
  },
};

const respons = await fetch(url, options);
const data = await respons.json();
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://use.typekit.net/qqk5mpc.css" />
    <meta name="generator" content={Astro.generator} />

    <title>forside</title>
  </head>

  <body>
    <Topnav />
    <main>
      <h1>Program</h1>
      <p>
        We have made a great program for you to experience at this years festival. Get ready to get to know all sort of things from japanese culture. Get a quick look at alle of the event right here,
        or go deeper into the events further down.
      </p>

      <div class="selector">
        {data.map((item) => <Smallbtn title={item.name} />)}
      </div>

      <Shelf title={"Saturday"}>
        {
          data.map((item) => (
            <Card
              title={item.name}
              description={item.description}
              imgPath={"../public/images/" + `${item.image_path}`}
              event_by={item.event_firm}
              place={item.place}
              from={item.time_from.substring(0, 5)}
              to={item.time_from.substring(0, 5)}
              day={item.day}
            />
          ))
        }
      </Shelf>
    </main>

    <Footer />
  </body>
</html>

<style>
  h1 {
    margin-left: 1rem;
  }
  p {
    margin-left: 1rem;
    max-width: 70ch;
  }

  body {
    background-color: var(--backgroundcolor);
  }

  .selector {
    margin-left: 1rem;
    margin-top: 1rem;
    display: flex;
    flex-wrap: wrap;
    gap: var(--smallgap);
    margin-right: 2rem;
  }
</style>

