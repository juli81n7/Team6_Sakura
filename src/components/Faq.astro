---
const { question } = Astro.props;
const { answer } = Astro.props;
---

<details class="border">
  <summary>
    {question}
    <div class="plus">
      <span class="bar"></span>
      <span class="bar2"></span>
    </div>
  </summary>
  <p>{answer}</p>
</details>

<style>
  .border {
    border-top: var(--redborder);
  }

  .border:last-of-type {
    border-bottom: var(--redborder);
  }
  summary {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-block: 2rem;
    margin-inline: 2rem;
    font-family: roc-grotesk, sans-serif;
    font-weight: 600;
    font-size: 1.1rem;
    cursor: pointer;
  }

  p {
    margin: -0.5rem 0rem 2rem 2rem;
  }

  .plus {
    margin-left: 2rem;
    display: flex;
    justify-items: center;
    align-items: center;
  }

  .bar {
    display: block;
    width: 2rem;
    height: 0.1rem;
    background-color: black;
    transform: translateX(50%);
  }

  .bar2 {
    display: block;
    width: 0.1rem;
    height: 2rem;
    background-color: black;
  }

  @media (min-width: 700px) {
    summary {
      margin-inline: 16rem;
    }
    p {
      margin-inline: 16rem;
    }
  }

  .hello .bar2 {
    display: none;
  }

  .hide {
    display: none;
  }
</style>

<script>
  const bar2 = document.querySelectorAll(".bar2");
  const summary = document.querySelectorAll("summary");

  summary.forEach((question) => {
    question.addEventListener("click", function () {
      this.classList.toggle("hello");
    });
  });
</script>
