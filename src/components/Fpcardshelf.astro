---
import Card from "./Card.astro";
import Fpcard from "./Fpcard.astro";

const { data1, data2, data3, data4 } = Astro.props;
---

<ul class="fp_gridcontainer">
  {data1.map((item) => <Fpcard link={"/undersider/" + item.slug} cla={item.class + " " + item.day} title={item.name} description={item.description.slice(0, 150) + "..."} imgPath={"../public/images/" + `${item.image_path}`} event_by={item.event_firm} place={item.place} time={item.time} day={item.day} item={item.id} liked={item.liked} />)}
  {data2.map((item) => <Fpcard link={"/undersider/" + item.slug} cla={item.class + " " + item.day} title={item.name} description={item.description.slice(0, 150) + "..."} imgPath={"../public/images/" + `${item.image_path}`} event_by={item.event_firm} place={item.place} time={item.time} day={item.day} item={item.id} liked={item.liked} />)}
  {data3.map((item) => <Fpcard link={"/undersider/" + item.slug} cla={item.class + " " + item.day} title={item.name} description={item.description.slice(0, 150) + "..."} imgPath={"../public/images/" + `${item.image_path}`} event_by={item.event_firm} place={item.place} time={item.time} day={item.day} item={item.id} liked={item.liked} />)}
  {data4.map((item) => <Fpcard link={"/undersider/" + item.slug} cla={item.class + " " + item.day} title={item.name} description={item.description.slice(0, 150) + "..."} imgPath={"../public/images/" + `${item.image_path}`} event_by={item.event_firm} place={item.place} time={item.time} day={item.day} item={item.id} liked={item.liked} />)}
</ul>

<style>
  .fp_gridcontainer {
    margin-top: 1rem;
    margin-left: 1rem;
    margin-right: 1rem;
    display: grid;
    justify-content: center;
    gap: 1rem;
  }

  @media (min-width: 700px) {
    .fp_gridcontainer {
      margin-top: 1rem;
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(311px, 1fr));
      justify-content: center;
      gap: 2rem;
      margin-left: 1rem;
      margin-right: 1rem;
    }
  }
</style>
