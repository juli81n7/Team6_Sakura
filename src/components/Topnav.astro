---
import "../styles/styles.css";
---

<header>
  <div>
    <a href="index"> <img src="public/images/logo.svg" alt="Sakura logo" /></a>
  </div>
  <nav>
    <div class="search"><img src="public/images/search.svg" alt="" /></div>
    <div class="burgermenu"></div>
  </nav>
</header>

<style>
  header {
    display: flex;
    width: 100%;
    height: 100%;
    padding-block: 1rem;
    background-color: var(--backgroundcolor);
    justify-content: space-between;
    align-items: center;
  }
  nav {
    display: flex;
    gap: var(--mediumgap);
  }
  .search,
  .burgermenu {
    width: 50px;
    height: 50px;
  }
</style>
