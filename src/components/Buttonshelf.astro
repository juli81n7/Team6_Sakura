---
import Smallbtn from "./Smallbtn.astro";

const { name } = Astro.props;
---

<div class="selector">
  <Smallbtn title={name} />
</div>

<style>
  .selector {
    margin-left: 2rem;
    margin-top: 1rem;
    display: flex;
    flex-wrap: wrap;
    gap: var(--smallgap);
    margin-right: 2rem;
  }
</style>
