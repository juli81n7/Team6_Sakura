---
import Buttonshelf from "./Buttonshelf.astro";
import Smallbtn from "./Smallbtn.astro";
const { title } = Astro.props;
---

<section>
  <header>
    <h2>{title}</h2>
    <Buttonshelf>
      <Smallbtn title="Main stage" />
      <Smallbtn title="Second stage" />
      <Smallbtn title="On the lawn" />
    </Buttonshelf>
  </header>
  <ul class="grid-container">
    <slot />
  </ul>
</section>

<style>
  section {
    margin-top: 2rem;
    margin-bottom: 2rem;
  }

  h2 {
    text-decoration: none;
    margin-left: 2rem;
  }

  .grid-container {
    margin-top: 1rem;
    display: flex;
    overflow: hidden;
    gap: 1rem;
    overflow: scroll;
  }

  @media (min-width: 700px) {
    .grid-container {
      margin-top: 1rem;
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(311px, 1fr));
      gap: 2rem;
      margin-left: 2rem;
      margin-right: 2rem;
    }
  }
</style>
